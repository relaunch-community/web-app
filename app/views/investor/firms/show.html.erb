<div class="flex flex-col md:space-y-4 md:space-x-0 w-full md:mx-0 mx-auto">
  <h2 class="text-3xl font-semibold mx-auto">
    Investor Profile - <span class="md:text-center"><%= @investor_firm.name %></span>
  </h2>

  <div class="flex flex-col space-y-1 md:space-y-2 my-4">

    <%# About %>
    <div class="flex flex-col md:flex-row md:items-center">

      <h3 class="md:w-1/3 text-xl font-semibold text-gray-600 md:self-start md:text-right md:text-center md:pr-8">
        About
      </h3>

      <div class="flex flex-col md:w-2/3 border-l-2 border-gray-300 outline-2 outline-white w-full my-2 p-2 md:p-4 md:pl-8">
        <%# Headline %>
        <div class="flex flex-col mt-4">
          <p class="text-xs text-gray-600 border-l-2 border-gray-300 pl-2">
            Thesis
          </p>

          <div class="w-full relative z-0 mt-4">
            <%= @investor_firm.thesis %>
          </div>
        </div>

        <%# Overview %>

        <div class="flex flex-col mt-4">
          <p class="text-xs text-gray-600 border-l-2 border-gray-300 pl-2">
            What sets us apart, and makes us great
          </p>

          <div class="w-full relative z-0 mt-4">
            <%= @investor_firm.overview %>
          </div>
        </div>

      </div>
    </div>

    <%# Contact %>
    <div class="flex flex-col md:flex-row md:items-center">

      <h3 class="md:w-1/3 text-xl font-semibold text-gray-600 md:self-start md:text-right md:text-center md:pr-8">
        Contact
      </h3>

      <div class="flex flex-col md:w-2/3 border-l-2 border-gray-300 outline-2 outline-white w-full my-2 p-2 md:p-4 md:pl-8">
        <%# Company URL %>
        <div class="flex flex-col mt-4">
          <p class="text-xs text-gray-600 border-l-2 border-gray-300 pl-2">
            Website
          </p>

          <div class="w-full mt-2">
            <%= link_to @investor_firm.site_url,
                        @investor_firm.site_url,
                        target: "_blank", rel: "noopener" %>
          </div>
        </div>

        <%# Location %>
        <div class="flex flex-col mt-4">
          <p class="text-xs text-gray-600 border-l-2 border-gray-300 pl-2">
            Headquarters
          </p>

          <div class="w-full mt-2">
            <%= "#{@investor_firm.physical_location.city}, " if @investor_firm.physical_location.city %>
            <%= "#{@investor_firm.physical_location.state_subdivision}, " if @investor_firm.physical_location.state_subdivision %>
            <%= @investor_firm.physical_location.country %>
          </div>
        </div>

      </div>
    </div>

    <%# People %>
    <div class="flex flex-col md:flex-row md:items-center">

      <h3 class="md:w-1/3 text-xl font-semibold text-gray-600 md:self-start md:text-right md:text-center md:pr-8">
        People
      </h3>

      <div
        id="<%= nested_dom_id(@investor_firm, "investor_firm_roles") %>"
        class="flex flex-col md:w-2/3 space-y-4 border-l-2 border-gray-300 outline-2 outline-white w-full my-2 p-2 md:p-4 md:pl-8">

        <%= render @investor_firm_roles %>
      </div>
    </div>

  </div>

</div>
