<%= turbo_frame_tag User.new, class: "w-full" do %>
  <% unless current_user %>
    <div class="flex flex-col md:flex-row justify-center items-center text-center md:space-x-4 space-y-2 md:space-y-0 w-full md:w-auto my-4 md:my-16 pb-6 md:pt-12">
      <h2 class="font-semibold text-2xl">Don't do it alone.</h2>
      <%= link_to t("pages.user_signup.signup_link"),
                  new_user_registration_path,
                  class: "rounded-lg py-2 px-5 bg-white text-black inline-block font-medium border-2 border-black cursor-pointer no-underline shadow-full-lg shadow-cyan-800/30 hover:shadow-solid-l-md hover:shadow-cyan-800/70 hover:translate-x-[0.25em] hover:translate-y-[-0.25em] duration-200" %>
      <h2 class="font-semibold text-2xl">It's better together.</h2>
    </div>
    <h2 class="font-semibold text-2xl mx-auto text-center"></h2>
  <% end %>
<% end %>
