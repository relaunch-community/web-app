<footer class="bg-gray-800 mt-12">
  <div class="container max-w-6xl py-6 mx-auto md:px-10">
    <div class="w-full flex flex-col md:flex-row items-center justify-center space-y-4 md:space-y-0 md:space-x-4">
      <%# Logo %>
      <%= link_to app_index_url do %>
        <%= image_tag "logo_dark_bg_750px.png", class: "flex-1 mx-auto rounded-full max-h-14 shadow-full-lg shadow-cyan-800/50 hover:shadow-cyan-700/50 duration-200" %>
      <% end %>

      <%# Menus %>
      <div class="w-full md:w-auto flex flex-1 flex-col md:flex-row md:justify-between items-center space-y-4 md:space-y-0 md:space-x-6 md:ml-3 text-white text-center">
        <div class="w-1/3 md:w-auto flex flex-col pb-2 md:pb-0 items-center justify-center md:justify-start space-y-4 text-white md:flex-row md:space-y-0 border-b-2 border-b-gray-500 md:border-b-0">
          <div class="flex flex-col justify-center group h-10">
            <% if current_user %>
              <%= button_to "Sign out", destroy_user_session_path, method: :delete,
                                                                   class: "no-underline",
                                                                   form: {
                                                                     # https://github.com/rails/rails/issues/44170#issuecomment-1069644509
                                                                     data: { turbo_method: :delete }
                                                                   } %>
            <% else %>
              <%= link_to "Log in", new_user_session_path,
                          class: "no-underline" %>
            <% end %>
            <div class="mx-1 border-b border-2 border-transparent group-hover:border-cyan-800/50"></div>
          </div>
        </div>

        <div class="w-1/3 md:w-auto flex flex-col md:flex-row space-y-4 md:space-y-0">
          <!-- https://github.com/tailwindlabs/tailwindcss/discussions/2466 -->
          <div class="flex flex-col justify-center group h-10">
            <%= link_to "Code of Conduct", code_of_conduct_url, class: "no-underline pr-2 md:border-r md:border-white" %>
            <div class="mr-2 border-b border-2 border-transparent group-hover:border-cyan-800/50"></div>
          </div>

          <div class="flex flex-col justify-center group h-10">
            <%= link_to "Anti-Harassment Policy", anti_harassment_url, class: "no-underline px-2 md:border-r md:border-white" %>
            <div class="mx-2 border-b border-2 border-transparent group-hover:border-cyan-800/50"></div>
          </div>

          <div class="flex flex-col justify-center group h-10">
            <%= link_to "Privacy Policy", privacy_policy_url, class: "no-underline pl-2" %>
            <div class="ml-2 border-b border-2 border-transparent group-hover:border-cyan-800/50"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
